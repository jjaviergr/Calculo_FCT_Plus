<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.usuario.calculo_fct_plus.RelacionaAlumnosActivity"
    tools:showIn="@layout/activity_relaciona_alumnos">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout7"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:id="@+id/btRAanterior"
            android:layout_alignTop="@+id/edNombreEmpresa"
            android:layout_toStartOf="@+id/textView2"
            android:layout_weight="1"
            android:onClick="btRAanteriorOnClick" />

        <EditText
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/edDatos_Alumnos"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Alumno"
            android:inputType="text"
            android:textStyle="normal"
            android:typeface="normal"
            android:singleLine="true"
            android:scrollIndicators="none"
            android:enabled="false"
            android:autoLink="none" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=">"
            android:id="@+id/btRASiguiente"
            android:layout_weight="1"
            android:onClick="btRSiguienteOnClick" />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout7"
        android:layout_alignParentStart="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/edNombreA"
                android:hint="Nombre"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/edApellidoA"
                android:hint="Apellidos"
                android:layout_weight="1" />
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout5"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true">

        <EditText
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/edFechaInic"
            android:hint="Fecha Inicio"
            android:layout_gravity="top"
            android:layout_weight="1" />

        <EditText
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edFechaFin"
            android:hint="Fecha Final"
            android:layout_gravity="top"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edHorasDia"
            android:hint="Horas por Día"

            android:layout_gravity="bottom"
            android:layout_weight="1" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edDias"

            android:layout_weight="1"
            android:hint="Nº de días" />
    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edNombreEmpresa"
        android:hint="Nombre de Empresa"
        android:layout_above="@+id/linearLayout9"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout9"
        android:layout_above="@+id/linearLayout6"
        android:layout_alignParentEnd="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edNombreC"
            android:hint="Nombre Resp"
            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edApellidosC"
            android:hint="Apellidos Resp"
            android:layout_weight="1" />
    </LinearLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout6"
            android:layout_above="@+id/linearLayout8"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/edTelefonoC"
                android:hint="Telefono Contacto"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/edEmail"
                android:hint="Correo Electronico"
                android:layout_weight="1" />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="44dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:id="@+id/btREAnterior"
            android:layout_alignTop="@+id/edNombreEmpresa"
            android:layout_toStartOf="@+id/textView2"
            android:layout_weight="0.76"
            android:onClick="btREAnteriorOnClick" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Datos de Empresas"
            android:id="@+id/edDatos_Empresa"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:inputType="text"
            android:textStyle="normal"
            android:typeface="normal"
            android:singleLine="true"
            android:scrollIndicators="none"
            android:enabled="false"
            android:layout_weight="0.64"
            android:textAlignment="center" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=">"
            android:id="@+id/btREPosterior"
            android:layout_weight="0.72"
            android:onClick="btREPosteriorOnClick" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/edNombreEmpresa">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asociar"
            android:id="@+id/btAsociarDesasociar"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="btAsociarOnClick" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar Empresa Asociada"
            android:id="@+id/chkBuscarEmpresaAlumno"
            android:checked="false"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="chkBuscarEmpresaAlumnoOnClick" />

    </RelativeLayout>

</RelativeLayout>
